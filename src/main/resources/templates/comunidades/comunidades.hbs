{{#partial "contenido" }}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tr>
                <th>Nombre</th>
                <th>Cant. Miembros</th>
                <th>Confiabilidad</th>
                <th>Unirme</th>
            </tr>
            <tbody>
            {{#each comunidades}}
                <tr>
                    <td>{{this.nombre}}</td>
                    <td>{{this.cantMiembros}}</td>
                    <td>{{this.confiabilidad}}</td>
                    <td>
                        <a class="btn btn-secondary" href="/comunidades/{{this.id}}/unirme/{{id}}"><i class="fa-solid fa-pen-to-square"></i></a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>

    </div>
{{/partial}}
{{> templates/base }}