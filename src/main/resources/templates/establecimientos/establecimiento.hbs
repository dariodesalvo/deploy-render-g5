{{#partial "contenido" }}
    <h3>Establecimiento perteneciente a {{entidad.leyenda}}</h3>
    <form method="POST" {{#if establecimiento}} action="/establecimientos/{{establecimiento.id}}" {{else}} action="/establecimientos" {{/if}}>
        <div class="form-group mb-10">
            <label>Leyenda: </label>
            <input name="leyenda" {{#if establecimiento}} value="{{establecimiento.leyenda}}" {{/if}} placeholder="Leyenda">
            <input name="idEntidad" value="{{entidad.id}}"  type="hidden" >

            <div class="form-group">
                <label class="mb-2" for="provincias">Provincia:</label>
                <select name="nombre" class="form-control mt-10">
                    <option selected>Selecione la provincia</option>
                    {{#each provincias}}
                        <option value="{{this.id}}">{{this.nombre}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
        </div>
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
{{/partial}}
{{> templates/base }}