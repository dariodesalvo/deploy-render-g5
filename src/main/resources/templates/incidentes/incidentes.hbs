{{#partial "contenido" }}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tr>
                <th>Servicio</th>
                <th>Observaciones</th>
                <th>Acciones</th>
            </tr>
            <tbody>
            {{#each incidentes}}
                <tr>
                    <td>{{this.observaciones}}</td>
                    <td>{{this.id}}</td>
                    <td>
                        <a class="btn btn-secondary" href="/incidentes/{{this.id}}/editar"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a class="btn btn-secondary" href="/incidentes/{{this.id}}/establecimientos"><i class="fa-solid fa-list-check"></i></a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        <div class="center">
            <a class="btn btn-primary" href="/apertura-incidente">Agregar Incidente</a>
        </div>

    </div>
{{/partial}}
{{> templates/base }}