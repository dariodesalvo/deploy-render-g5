{{#partial "contenido" }}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tr>
                <th>Servicio</th>
                <th>Observaciones</th>
                <th>Acciones</th>
            </tr>
            <tbody>
            {{#each incidentes}}
                <tr>
                    <td>{{this.servicio_id}}</td>
                    <td>{{this.observaciones}}</td>
                    <td>
                        <a class="btn btn-secondary" href="incidente/{{this.id}}/cerrar">Cerrar<i class="fa-window-close"></i></a>
                     </td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        {{#if miembro}}
            <div class="center">
            <a class="btn btn-primary" href="/apertura-incidente">Registrar un nuevo Incidente</a>
        </div>
        {{/if}}
    </div>
{{/partial}}
{{> templates/base }}