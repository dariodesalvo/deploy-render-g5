{{#partial "contenido" }}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tr>
                <th>Servicio</th>
                <th>Fecha Apertura</th>
                <th>Observaciones</th>
                <th>Acciones</th>
            </tr>
            <tbody>
            {{#each incidentes}}
                <tr>
                    <td>{{this.servicio.nombre}}</td>
                    <td>{{this.fechaApertura}}</td>
                    <td>{{this.observaciones}}</td>
                    <td>
                {{#if Miembro}}
                        <a class="btn btn-secondary" href="incidente/{{this.id}}/cerrar"> Cerrar </a>
                {{/if}}
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        {{#if Miembro}}
            <div class="center">
            <a class="btn btn-primary" href="/apertura-incidente">Registrar un nuevo Incidente</a>
        </div>
        {{/if}}
    </div>
{{/partial}}
{{> templates/base }}