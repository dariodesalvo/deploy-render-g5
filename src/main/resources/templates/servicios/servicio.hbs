{{#partial "contenido" }}
    <h3>Servicio perteneciente a establecimiento: {{establecimiento.leyenda}}</h3>
    <form method="POST" {{#if servicio}} action="/servicios/{{servicio.id}}" {{else}} action="/servicios" {{/if}}>
        <div class="form-group mb-3">
            <label for="nombre">Nombre:</label>
            <input style="max-width: 200px;" name="nombre" {{#if servicio}} value="{{servicio.nombre}}" {{/if}} class="form-control" placeholder="Nombre">
        </div>
        <div class="form-group mb-3">
            <label for="estaActivo">Selecciona una opci√≥n:</label>
            <select style="max-width: 200px;" name="estaActivo" class="form-control">
                <option value="1">Activo</option>
                <option value="0">Inactivo</option>
            </select>
        </div>
        <input name="idEstablecimiento" value="{{establecimiento.id}}" type="hidden">
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
{{/partial}}
{{> templates/base }}