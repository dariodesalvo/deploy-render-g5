<html lang="es">
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/administrar-usuarios.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <title>Administrar usuarios</title>
</head>
<header>
  <div class="header">
    <a href="#default" class="logo">Servicios DDS</a>
    <img src="/img/logos/logo.png" alt="icono-usuario" class="app-logo" />
    <div class="header-right">
      <img src="/img/logos/usuario.svg" alt="icono-usuario" class="icono-usuario" />
    </div>
  </div>
</header>

<body>
  <div class="administrar-usuarios">
    <h1 class="cargar-text">Administrar Usuarios</h1>

    <div class="input-group mb-2 buscar-usuarios">
      <input type="text" class="form-control search" aria-label="Buscar Usuario" placeholder="Buscar usuario">
      <span class="input-group-text search-button"><img src="/img/logos/search.svg" alt="icono-busqueda" class="icono-busqueda" />
      </span>
    </div>
    <table class="table tabla-usuarios">
      <thead>
        <tr>
          <th scope="col">Usuario</th>
          <th scope="col">Rol</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">Caro</th>
          <td>
            <select class="form-select" aria-label="Default select example">
              <option selected value="1">Administrador</option>
              <option value="2">Prestador</option>
              <option value="3">Lector</option>
              <option value="4">Miembro</option>
            </select>
          </td>
        </tr>
        <tr>
          <th scope="row">Dari</th>
          <td>
            <select class="form-select" aria-label="Default select example">
              <option value="1">Administrador</option>
              <option selected value="2">Prestador</option>
              <option value="3">Lector</option>
              <option value="4">Miembro</option>
            </select>
          </td>
        </tr>
        <tr>
          <th scope="row">Maurito</th>
          <td>
            <select class="form-select" aria-label="Default select example">
              <option value="1">Administrador</option>
              <option value="2">Prestador</option>
              <option selected value="3">Lector</option>
              <option value="4">Miembro</option>
            </select>
          </td>
        </tr>
        <tr>
          <th scope="row">Mica</th>
          <td>
            <select class="form-select" aria-label="Default select example">
              <option value="1">Administrador</option>
              <option value="2">Prestador</option>
              <option value="3">Lector</option>
              <option selected value="4">Miembro</option>
            </select>
          </td>
        </tr>
      </tbody>
    </table>
    <button type="button" class="btn btn-primary guardar-cambios">Guardar cambios</button>
  </div>
  <footer>
    <div class="footer">
      <a href="#default" class="logo">Servicios DDS</a>
      <img src="/img/logos/logo.png" alt="icono-usuario" class="app-logo-footer" />
      <p class="text-dark">Servicios DDS&copy; 2023</p>
      <div class="header-right-footer">
        <a class="active" href="#home">Home</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
      </div>
    </div>
  </footer>
</body>
</html>